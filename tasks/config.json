{
  "lint": {
    "fix": true,
    "sources": [
      "*.{html,js}",
      "tasks/*.js",
      "test/*.html"
    ]
  },
  "watch": {
    "lint": true,
    "sources": [
      "**/*.{html,js}"
    ]
  },
  "server": {
    "server": {
      "baseDir": ".",
      "index": "index.html",
      "routes": {
        "/components/{{component}}/": ".",
        "/components": "bower_components"
      }
    },
    "open": false,
    "ghostMode": false,
    "ui": false,
    "reloadOnRestart": true,
    "startPath": "components/{{component}}/demo/index.html"
  }
}
